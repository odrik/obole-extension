{
  "name": "Obole",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Obole Extension",
  "homepage_url": "https://obole.eu",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "*://odrik.fr/*",
    "tabs",
    "storage"
  ],
  "content_scripts": [ 
    {
      "css": [ "src/inject/inject.css" ],
      "js": [ 
        "js/jquery/jquery.min.js",
        "src/inject/inject.css",
        "src/inject/inject.js"
      ],
      "matches": [ "*://www.youtube.com/*" ]
   }
 ]
}